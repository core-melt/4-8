<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>投稿一覧</title>
</head>
<body>
	<%= flash[:success] %>
	<h1>Books</h1>
	<table>
		<tr>
			<th>Title</th>
			<th>Body</th>
		</tr>
		<% @books.each do |book| %>
			<tr>
				<td><%= book.title %></td>
				<td><%= book.body %></td>
				<td><%= link_to "Show", book_path(book.id) %></td>
				<td><%= link_to "Edit", edit_book_path(book.id) %></td>
				<td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you Sure?" %></td>
			</tr>
		<% end %>
	</table>
	<div>
		<h2>New book</h2>
		<%= form_for(@book) do |f| %>
			<%= render 'layouts/error_message', model: f.object %>

			<h4>Title</h4>
			<%= f.text_field :title %>

			<h4>Body</h4>
			<%= f.text_area :body %>

			<p></p>
			<%= f.submit 'Create Book' %>
		<% end %>
	</div>
</body>
</html>


